# ========================================
# Server Configuration
# ========================================
NODE_ENV=development
PORT=8080
API_VERSION=v1

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
# Local Development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=propmanager
DB_USER=postgres
DB_PASSWORD=your_password_here

# Google Cloud SQL (Production)
# CLOUD_SQL_CONNECTION_NAME=your-project:region:instance-name
# DB_HOST=/cloudsql/your-project:region:instance-name
# DB_SOCKET_PATH=/cloudsql/your-project:region:instance-name

DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/propmanager

# ========================================
# JWT & Authentication
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# Security
# ========================================
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGIN=http://localhost:5173
# Production: CORS_ORIGIN=https://propmanager.app,https://www.propmanager.app

# ========================================
# Google Cloud Storage
# ========================================
GCS_BUCKET_NAME=propmanager-uploads
GCS_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ========================================
# Logging
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========================================
# Email Configuration (Optional)
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@propmanager.app

# ========================================
# External Services (Optional)
# ========================================
# STRIPE_SECRET_KEY=sk_test_...
# SENTRY_DSN=https://...
